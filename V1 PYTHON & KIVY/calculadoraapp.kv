#:import C kivy.utils.get_color_from_hex
#:set hexCOR_FUNDO_BT C("E1E1E1") 
#:set hexCOR_FUNDO_BT_BORD C("B2B2B2")


<CustomeButton@Button>:
    font_size: "30sp"
    background_color: 0, 0, 0, 1

    canvas.before:
        Color:
            rgba: hexCOR_FUNDO_BT if self.state=='normal' else hexCOR_FUNDO_BT_BORD
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20,]

<MiCalculadora@GridLayout>:
    rows: 5
    padding: "10sp"
    spacing: "10sp"

    BoxLayout:
        spacing: "7sp"

        TextInput:
            id: ti_entrada
            font_size: "50sp"
            multiline: False
            readonly: True

    BoxLayout:
        spacing: "7sp"
        CustomeButton:
            text: "7"
            on_press: ti_entrada.text += self.text
        CustomeButton:
            text: "8"
            on_press: ti_entrada.text += self.text
        CustomeButton:
            text: "9"
            on_press: ti_entrada.text += self.text
        CustomeButton:
            text: "+"
            on_press: ti_entrada.text += self.text
            
    BoxLayout:
        spacing: "7sp"
        CustomeButton:
            text: "4"
            on_press: ti_entrada.text += self.text
        CustomeButton:
            text: "5"
            on_press: ti_entrada.text += self.text
        CustomeButton:
            text: "6"
            on_press: ti_entrada.text += self.text
        CustomeButton:
            text: "-"
            on_press: ti_entrada.text += self.text
           
    BoxLayout:
        spacing: "7sp"
        CustomeButton:
            text: "1"
            on_press: ti_entrada.text += self.text
        CustomeButton:
            text: "2"
            on_press: ti_entrada.text += self.text
        CustomeButton:
            text: "3"
            on_press: ti_entrada.text += self.text
        CustomeButton:
            text: "*"
            on_press: ti_entrada.text += self.text
        
    BoxLayout:
        spacing: "7sp"
        CustomeButton:
            text: "AC"
            on_press: ti_entrada.text = ""
        CustomeButton:
            text: "0"
            on_press: ti_entrada.text += self.text
        CustomeButton:
            text: "="
            on_press: ti_entrada.text = str(eval(ti_entrada.text))
        
        CustomeButton:

            text: "/"
            on_press: ti_entrada.text += self.text        

